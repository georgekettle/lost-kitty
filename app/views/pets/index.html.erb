<div class="max-w-3xl mx-auto">
    <h1 class="text-center text-3xl p-3 font-bold">Pets</h1>
    <div class="flex flex-wrap">
        <% @pets.each do |pet| %>
        <div class="w-1/3 p-3">
            <%= link_to pet_path(pet) do %>
                <%= image_tag pet.image, alt: "#{pet.species} - #{pet.name}", class: "w-full" %>
                <h4><%= pet.name %></h4>
                <h4 class="text-gray-400 text-xs"><%= pet.address %></h4>
            <% end %>
        </div>
        <% end %>
    </div>
</div>